{
    "scripts": {
        "test:dev": "jest --setupFiles tests/setup/dev.js",
        "test:check": "jest --setupFiles tests/setup/check.js",
        "test:prod": "jest --setupFiles tests/setup/prod.js",
        "test": "npm run test:dev && npm run test:prod && npm run test:check"
    },
    "author": {
        "name": "Francois Chabot",
        "url": "https://https://github.com/FrancoisChabot"
    },
    "license": "Apache-2.0",
    "dependencies": {
        "@probed/core": "file:../dist",
        "@types/jest": "^26.0.22",
        "jest": "^26.6.3",
        "ts-jest": "^26.5.5",
        "typescript": "^4.2.4"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(disttest))\\.ts?$",
        "moduleFileExtensions": ["js", "ts"]
    }
}
